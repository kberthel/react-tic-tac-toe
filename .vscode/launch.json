{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": ["dev"],
      "console": "integratedTerminal",
      "stopOnEntry": false,  // Key: No auto-break on startup
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}